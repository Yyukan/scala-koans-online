# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                controllers.Application.index

# Editor
GET    /editor          controllers.Application.editor
GET    /koan            controllers.Application.koan(id: Long)
GET    /suite           controllers.Application.suite(id: Long)
POST   /compile         controllers.Application.compile

# Parse Koans
GET    /koans/parse     controllers.Application.koansParse
GET    /koans/list      controllers.Application.koansList

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file    controllers.Assets.at(path="/public", file)
GET    /webjars/*file   controllers.WebJarAssets.at(file)
