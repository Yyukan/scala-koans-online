# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                controllers.Application.index

# Editor
POST   /compile         controllers.Application.compile

# Koans manipulations
GET    /editor                 controllers.KoansController.editor
GET    /koans/parse            controllers.KoansController.koansParse
GET    /koans/list             controllers.KoansController.koansList
GET    /koans/:suite/:order    controllers.KoansController.koan(suite: String, order:Long)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file    controllers.Assets.at(path="/public", file)
GET    /webjars/*file   controllers.WebJarAssets.at(file)
